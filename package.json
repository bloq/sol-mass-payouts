{
  "name": "sol-mass-payouts",
  "version": "1.0.1",
  "description": "sol-mass-payouts",
  "license": "MIT",
  "main": "truffle-config.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/bloq/sol-mass-payouts.git"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "fork:start": "npx ganache-cli --fork $NODE_BASE_URL --host 0.0.0.0 --mnemonic $DEPLOYMENT_ACCOUNT_KEY &",
    "fork:stop": "kill -TERM $(lsof -i :8545 -s TCP:LISTEN -t)",
    "ganache-cli": "ganache-cli",
    "lint": "eslint ./test/*",
    "lint:fix": "eslint --fix ./test --ext .js",
    "truffle": "truffle",
    "test": "truffle test",
    "solhint": "solhint './contracts/**/*.sol'",
    "solhint:fix": "prettier --write 'contracts/**/*.sol'"
  },
  "dependencies": {
    "bip39": "^3.0.2",
    "config": "^3.3.1",
    "hdkey": "^2.0.1"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "^3.0.0",
    "@openzeppelin/test-helpers": "^0.5.7",
    "@truffle/hdwallet-provider": "^1.0.36",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^4.18.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-mocha-no-only": "^1.1.0",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "ethlint": "^1.2.5",
    "ganache-cli": "^6.12.0",
    "left-pad": "^1.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^2.0.5",
    "prettier-plugin-solidity": "^1.0.0-alpha.54",
    "solc": "0.6.12",
    "solhint": "^2.3.1",
    "solhint-plugin-prettier": "0.0.4",
    "truffle": "5.1.48"
  },
  "pre-commit": [
    "solhint",
    "lint"
  ]
}
